{
  "verbose": true,
  "preset": "ts-jest",
  "coverageDirectory": "coverage",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "testMatch": [
    "**/test/**/*.spec.ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ]
}
